- model_class = Invoice
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @invoice.name
  %dt
    %strong
      = model_class.human_attribute_name(:month)
      \:
  %dd= @invoice.month
  %dt
    %strong
      = model_class.human_attribute_name(:type)
      \:
  %dd= @invoice.type
  %dt
    %strong
      = model_class.human_attribute_name(:vendor)
      \:
  %dd= @invoice.vendor
  %dt
    %strong
      = model_class.human_attribute_name(:file)
      \:
  %dd= @invoice.file
  %dt
    %strong
      = model_class.human_attribute_name(:company_id)
      \:
  %dd= @invoice.company_id
= link_to t('.back', :default => t("helpers.links.back")), |
  invoices_path, :class => 'btn btn-default'               |
= link_to t('.edit', :default => t("helpers.links.edit")), |
  edit_invoice_path(@invoice), :class => 'btn btn-default' |
= link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
  invoice_path(@invoice),                                                                                      |
  :method => 'delete',                                                                                         |
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
  :class => 'btn btn-danger'                                                                                   |
