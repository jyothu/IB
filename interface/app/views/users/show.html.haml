- model_class = User
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:first_name)
      \:
  %dd= @user.first_name
  %dt
    %strong
      = model_class.human_attribute_name(:last_name)
      \:
  %dd= @user.last_name
  %dt
    %strong
      = model_class.human_attribute_name(:admin)
      \:
  %dd= @user.admin
  %dt
    %strong
      = model_class.human_attribute_name(:email)
      \:
  %dd= @user.email
  %dt
    %strong
      = model_class.human_attribute_name(:encrypted_password)
      \:
  %dd= @user.encrypted_password
  %dt
    %strong
      = model_class.human_attribute_name(:reset_password_token)
      \:
  %dd= @user.reset_password_token
  %dt
    %strong
      = model_class.human_attribute_name(:reset_password_sent_at)
      \:
  %dd= @user.reset_password_sent_at
  %dt
    %strong
      = model_class.human_attribute_name(:remember_created_at)
      \:
  %dd= @user.remember_created_at
  %dt
    %strong
      = model_class.human_attribute_name(:current_sign_in_at)
      \:
  %dd= @user.current_sign_in_at
  %dt
    %strong
      = model_class.human_attribute_name(:last_sign_in_at)
      \:
  %dd= @user.last_sign_in_at
  %dt
    %strong
      = model_class.human_attribute_name(:current_sign_in_ip)
      \:
  %dd= @user.current_sign_in_ip
  %dt
    %strong
      = model_class.human_attribute_name(:last_sign_in_ip)
      \:
  %dd= @user.last_sign_in_ip
  %dt
    %strong
      = model_class.human_attribute_name(:confirmation_token)
      \:
  %dd= @user.confirmation_token
  %dt
    %strong
      = model_class.human_attribute_name(:confirmed_at)
      \:
  %dd= @user.confirmed_at
  %dt
    %strong
      = model_class.human_attribute_name(:confirmation_sent_at)
      \:
  %dd= @user.confirmation_sent_at
  %dt
    %strong
      = model_class.human_attribute_name(:unconfirmed_email)
      \:
  %dd= @user.unconfirmed_email
  %dt
    %strong
      = model_class.human_attribute_name(:company_id)
      \:
  %dd= @user.company_id
= link_to t('.back', :default => t("helpers.links.back")), |
  users_path, :class => 'btn btn-default'                  |
= link_to t('.edit', :default => t("helpers.links.edit")), |
  edit_user_path(@user), :class => 'btn btn-default'       |
= link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
  user_path(@user),                                                                                            |
  :method => 'delete',                                                                                         |
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
  :class => 'btn btn-danger'                                                                                   |
