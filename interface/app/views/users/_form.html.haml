= form_for @user, :html => { :class => "form-horizontal user" } do |f|
  - if @user.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@user.errors.count, "error")
          prohibited this user from being saved:
      .panel-body
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg
  .control-group
    = f.label :first_name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'form-control'
    = error_span(@user[:first_name])
  .control-group
    = f.label :last_name, :class => 'control-label'
    .controls
      = f.text_field :last_name, :class => 'form-control'
    = error_span(@user[:last_name])
  .control-group
    = f.label :admin, :class => 'control-label'
    .controls
      = f.text_field :admin, :class => 'form-control'
    = error_span(@user[:admin])
  .control-group
    = f.label :email, :class => 'control-label'
    .controls
      = f.text_field :email, :class => 'form-control'
    = error_span(@user[:email])
  .control-group
    = f.label :encrypted_password, :class => 'control-label'
    .controls
      = f.text_field :encrypted_password, :class => 'form-control'
    = error_span(@user[:encrypted_password])
  .control-group
