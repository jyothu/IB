    = f.label :last_sign_in_ip, :class => 'control-label'
    .controls
      = f.text_field :last_sign_in_ip, :class => 'form-control'
    = error_span(@user[:last_sign_in_ip])
  .control-group
    = f.label :confirmation_token, :class => 'control-label'
