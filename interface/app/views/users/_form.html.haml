      = f.text_field :confirmation_token, :class => 'form-control'
    = error_span(@user[:confirmation_token])
  .control-group
    = f.label :confirmed_at, :class => 'control-label'
    .controls
      = f.text_field :confirmed_at, :class => 'form-control'
    = error_span(@user[:confirmed_at])
  .control-group
    = f.label :confirmation_sent_at, :class => 'control-label'
